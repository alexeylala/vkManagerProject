<Window x:Class="vkManageFinal.ChangeUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Змінити користувача" Height="183.771" ResizeMode="NoResize" Width="280" WindowStartupLocation="CenterScreen" Icon="Images/vkontakte-128x128.png" KeyDown="Window_KeyDown_1">
    <StackPanel  Background="#FF787878" x:Name="ChangeUserPanel" Margin="0,0,0,0">

        <Label HorizontalAlignment="Center" Content="Email користувача"/>
        <TextBox x:Name="UserName" Height="22" Margin="45,5" TextWrapping="Wrap"/>
        <Label HorizontalAlignment="Center" Content="Пароль"/>
        <PasswordBox x:Name="UserPassword" Height="22" Margin="45,5"/>
        <Button x:Name="Authorize" Margin="45,0" Height="22" Content="Змінити" Click="Authorize_Click_1"/>

    </StackPanel>
</Window>
